<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fractal"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numberField"
        app:layout_constraintBottom_toTopOf="@+id/operationField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="52pt"
        android:layout_marginEnd="62pt"
        android:layout_weight="1"
        android:backgroundTint="@color/blue_2"
        android:gravity="center_horizontal"

        android:hint="@string/entNumber"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="12pt"
        android:textStyle="italic"
        android:importantForAutofill="no" />

    <!-- поле знака операции -->
    <TextView
        android:id="@+id/operationField"
        app:layout_constraintBottom_toTopOf="@+id/resultField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="52pt"
        android:layout_marginEnd="62pt"
        android:background="@color/teal_200"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="8pt" />

    <TextView
        android:id="@+id/resultField"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="52pt"
        android:layout_marginEnd="62pt"
        android:background="@color/teal_200"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="12pt">

    </TextView>

    <GridLayout
        android:id="@+id/gridLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="50pt"
        android:layout_marginEnd="61pt"
        android:layout_marginBottom="3dp"
        android:columnCount="4">

        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/purple_500"
            android:onClick="onOperationClick"
            android:text="@string/btn_clear_all"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/purple_500"
            android:onClick="onOperationClick"
            android:text="@string/btn_percent"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btn_sqrt"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/purple_500"
            android:onClick="onOperationClick"
            android:text="@string/btn_sqrt"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/purple_500"
            android:onClick="onOperationClick"
            android:text="@string/btn_div"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/blue_1"
            android:onClick="onNumberClick"
            android:text="@string/btn_1"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/blue_1"
            android:onClick="onNumberClick"
            android:text="@string/btn_2"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/blue_1"
            android:onClick="onNumberClick"
            android:text="@string/btn_3"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btnMult"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/purple_500"
            android:onClick="onOperationClick"
            android:text="@string/btn_mult"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/blue_1"
            android:onClick="onNumberClick"
            android:text="@string/btn_4"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/blue_1"
            android:onClick="onNumberClick"
            android:text="@string/btn_5"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/blue_1"
            android:onClick="onNumberClick"
            android:text="@string/btn_6"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/purple_500"
            android:onClick="onOperationClick"
            android:text="@string/btn_sub"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/blue_1"
            android:onClick="onNumberClick"
            android:text="@string/btn_7"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/blue_1"
            android:onClick="onNumberClick"
            android:text="@string/btn_8"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/blue_1"
            android:onClick="onNumberClick"
            android:text="@string/btn_9"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/purple_500"
            android:onClick="onOperationClick"
            android:text="@string/btn_add"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btnComma"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/blue_2"
            android:onClick="onNumberClick"
            android:text="@string/btn_comma"
            android:textSize="@dimen/textSize2" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:backgroundTint="@color/blue_1"
            android:onClick="onNumberClick"
            android:text="@string/btn_0"
            android:textSize="@dimen/textSize2" />


        <Button
            android:id="@+id/btnEqual"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/height2"
            android:layout_marginStart="@dimen/layout_marginStart"
            android:layout_marginEnd="@dimen/layout_marginEnd"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:backgroundTint="@color/green"
            android:onClick="onOperationClick"
            android:text="@string/btn_equal"
            android:textSize="@dimen/textSize2" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>